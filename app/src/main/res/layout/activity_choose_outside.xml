<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#728073"
    tools:context="app.theducksneezes.com.ldc.GoOutsideMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/hikeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:layout_weight="2"
            android:background="@drawable/button_rounded_top"
            android:onClick="openToHiking"
            android:text="Hiking"
            android:textAllCaps="false"
            android:textColor="#364652"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bikeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="2"
            android:background="@drawable/button_rounded_bottom"
            android:onClick="openToBiking"
            android:text="Biking"
            android:textAllCaps="false"
            android:textColor="#364652"
            android:textSize="24sp" />

        <Button
            android:id="@+id/createButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="3"
            android:background="@drawable/button_rounded"
            android:onClick="openToCreateYourOwn"
            android:text="Create Your Own"
            android:textAllCaps="false"
            android:textColor="#364652"
            android:textSize="24sp" />
    </LinearLayout>
</RelativeLayout>
