<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#728073"
    tools:context="app.theducksneezes.com.ldc.GoOutsideMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/hikeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:onClick="openToHiking"
            android:text="Hiking"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_margin="10dp"
            android:background="#F2F5E3"
            />

        <Button
            android:id="@+id/bikeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:onClick="openToBiking"
            android:text="Biking"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_margin="10dp"
            android:background="#F2F5E3"
            />

        <Button
            android:id="@+id/createButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:background="#F2F5E3"
            android:onClick="openToCreateYourOwn"
            android:text="Create Your Own"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24sp" />
    </LinearLayout>
</RelativeLayout>
