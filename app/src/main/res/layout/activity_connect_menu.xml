<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#728073"
    tools:context="app.theducksneezes.com.ldc.ConnectMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/videoCallButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:background="@drawable/button_rounded"
                android:onClick="openToVideoCall"
                android:text="Video Call"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/phoneCallButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:background="@drawable/button_rounded"
                android:onClick="openToPhoneCall"
                android:text="Phone Call"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/textButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_rounded"
                android:onClick="openToText"
                android:text="Text"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/disconnectButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_rounded"
                android:onClick="openToDisconnect"
                android:text="Disconnect"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/homeButton"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:background="@drawable/button_circle"
        android:onClick="openToMenu"
        android:text="Home"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="24sp" />
</RelativeLayout>